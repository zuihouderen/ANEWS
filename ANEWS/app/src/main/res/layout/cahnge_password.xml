<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/before_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新       密      码:"
            android:textSize="@dimen/login_textsize"
            android:drawableLeft="@drawable/suo_1"
            android:layout_marginRight="@dimen/margin_right"/>
        <EditText
            android:id="@+id/before_password_et"
            android:layout_width="@dimen/login_edit_lenth"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="请输入新的密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/changed_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/suo_1"
            android:text="再次确认密码:"
            android:textSize="@dimen/login_textsize"
            android:layout_marginRight="@dimen/margin_right" />
        <EditText
            android:id="@+id/changed_password_et"
            android:layout_width="@dimen/login_edit_lenth"
            android:layout_height="wrap_content"
            android:hint="再次输入新的密码"/>
    </LinearLayout>

    <Button
        android:id="@+id/changed_password_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:textSize="@dimen/login_textsize"/>
    <Button
        android:id="@+id/change_password_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="@dimen/login_textsize"/>
</LinearLayout>