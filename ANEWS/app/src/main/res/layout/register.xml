<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册账号"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/register_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/yonghu"
            android:text="手机号:"
            android:textSize="@dimen/login_textsize"
            android:layout_marginRight="@dimen/margin_right"/>
        <EditText
            android:id="@+id/register_user_name_et"
            android:layout_width="@dimen/login_edit_lenth"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="请输入手机号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/register_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/suo_1"

            android:text="密    码:"
            android:textSize="@dimen/login_textsize"
            android:layout_marginRight="@dimen/margin_right" />
        <EditText
            android:id="@+id/register_password_et"
            android:layout_width="@dimen/login_edit_lenth"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="请输入登录密码"/>
    </LinearLayout>

    <Button
        android:id="@+id/register_register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="@dimen/login_textsize"/>
    <Button
        android:id="@+id/register_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="取消"
        android:textSize="@dimen/login_textsize"/>
</LinearLayout>